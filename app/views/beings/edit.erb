<div class="being_master_container">
  <div class="being_form_container">
    <form action="/beings/<%= @being.id %>/edit" method="post" accept-charset="utf-8">
      <input type="hidden" value="patch" name="_method" id="hidden"/>

      <p><%= flash[:edit_being_error] %></p>

      <label>Name: </label>
      <input type="text" value="<%= @being.name %>" name="name" id="name"/>

      <br><br>

      <label>Age: </label>
      <input type="text" value="<%= @being.age %>" name="age" id=""/>

      <br><br>

      <label>Species: </label>
      <input type="text" value="<%= @being.species %>" name="species" id="species"/>

      <br><br>

      <label>Body: </label>
      <% Part::BODY_MODELS.each do |model| %>
        <label><%= model %></label>
        <input type="radio" value="<%= model %>" name="body_model" id="body_model_<%= model %>" onchange="bodyChange(this)" <%= 'checked' if model == @being.parts[Part::BODY].model.to_i %>/>
      <% end %>

      <br>

      <label>Color: </label>
      <input type="range" value="<%= @being.parts[1].color %>" name="body_color" id="body_color" oninput="bodyColorChange(this)"/> 
      <br>
      <label>Brightness: </label>
      <input type="range" value="<%= @being.parts[1].brightness %>" name="body_brightness" id="body_brightness" oninput="bodyBrightnessChange(this)"/>

      <br><br>

      <label>Head: </label>
      <% Part::HEAD_MODELS.each do |model| %>
        <label><%= model %></label>
        <input type="radio" value="<%= model %>" name="head_model" id="head_model_<%= model %>" onchange="headChange(this)" <%= 'checked' if model == @being.parts[Part::HEAD].model.to_i %>/>
      <% end %>

      <br>

      <label>Color: </label>
      <input type="range" value="<%= @being.parts[0].color %>" name="head_color" id="head_color" oninput="headColorChange(this)"/> <br>
      <label>Brightness: </label>
      <input type="range" value="<%= @being.parts[0].brightness %>" name="head_brightness" id="head_brightness" oninput="headBrightnessChange(this)"/>

      <br><br>

      <label>Eyes: </label>
      <% Part::EYES_MODELS.each do |model| %>
        <label><%= model %></label>
        <input type="radio" value="<%= model %>" name="eyes_model" id="eyes_model_<%= model %>" onchange="eyesChange(this)" <%= 'checked' if model == @being.parts[Part::EYES].model.to_i %>/>
      <% end %>

      <br>

      <label>Color: </label>
      <input type="range" value="<%= @being.parts[2].color %>" name="eyes_color" id="eyes_color" oninput="eyesColorChange(this)"/> 
      <br>
      <label>Brightness: </label>
      <input type="range" value="<%= @being.parts[2].brightness %>" name="eyes_brightness" id="eyes_brightness" oninput="eyesBrightnessChange(this)"/>

      <br><br>

      <input type="submit" value="Update" name="update" id="update"/>
    </form>

  </div>

  <div class="being_preview_container">
    <div class="being_preview">
      <div class="being_container">
        <img id="body_preview" class="body_display" src="/img/body1.png" width="114"/>
        <img id="head_preview" class="head_display" src="/img/head1.png" width="114"/>
        <img id="eyes_preview" class="eyes_display" src="/img/eyes1.png" width="114"/>
      </div>
    </div>

    <form action="/beings/<%= @being.id %>/delete" method="post" accept-charset="utf-8">
      <input type="hidden" value="delete" name="_method" id="hidden"/>

      <input type="submit" value="Delete" name="delete" id="delete"/>
    </form>
  </div>

  <script charset="utf-8">
    document.getElementById("body_preview").src = 
      `/img/body<%= @being.parts[Part::BODY].model %>.png`;

    var angle = Math.round(<%= @being.parts[Part::BODY].color %> * 3.6);
    var bright = <%= @being.parts[Part::BODY].brightness %> / 2 + 50;

    document.getElementById("body_preview").style.filter = 
      `brightness(${bright}%) hue-rotate(${angle}deg)`;

    document.getElementById("head_preview").src = 
      `/img/head<%= @being.parts[Part::HEAD].model %>.png`;

    var angle = Math.round(<%= @being.parts[Part::HEAD].color %> * 3.6);
    var bright = <%= @being.parts[Part::HEAD].brightness %> / 2 + 50;

    document.getElementById("head_preview").style.filter = 
      `brightness(${bright}%) hue-rotate(${angle}deg)`;

    document.getElementById("eyes_preview").src = 
      `/img/eyes<%= @being.parts[Part::EYES].model %>.png`;

    var angle = Math.round(<%= @being.parts[Part::EYES].color %> * 3.6);
    var bright = <%= @being.parts[Part::EYES].brightness %> / 2 + 50;

    document.getElementById("eyes_preview").style.filter = 
      `brightness(${bright}%) hue-rotate(${angle}deg)`;
  </script>

</div>

<script src="/js/edit_being.js"></script>
