<form action="/beings/new" method="post" accept-charset="utf-8">
  <p><%= flash[:new_being_error] %></p>

  <label>Name: </label>
  <input type="text" name="name" id="name"/>

  <br><br>

  <label>Age: </label>
  <input type="text" name="age" id=""/>

  <br><br>

  <label>Species: </label>
  <input type="text" name="species" id="species"/>

  <br><br>

  <label>Body: </label>
  <% Part::BODY_TYPES.each do |type| %>
    <input type="radio" value="<%= type %>" name="body_class" id="<%= type %>"/>
  <% end %>


  <input type="submit" value="Create" name="create" id="create"/>
  
</form>
